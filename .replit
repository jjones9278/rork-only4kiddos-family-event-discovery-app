modules = ["nodejs-20", "bun"]
[agent]
expertMode = true
integrations = ["javascript_stripe:1.0.0", "firebase_barebones_javascript:1.0.0"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36341
externalPort = 3001

[[ports]]
localPort = 36687
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web Server"

[[workflows.workflow]]
name = "Expo Web Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun ./node_modules/.bin/serve . -l 5000 --no-compression"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["bun", "run", "start-web"]
build = ["bun", "install"]
